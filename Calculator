def calc(a, b, op):
    if op == '+':
        return a + b
    elif op == '-':
        return a - b
    elif op == '*':
        return a * b
    elif op == '/':
        if b != 0:
            return a / b
        else:
            return "Cannot divide by zero"
    else:
        return "Invalid operator"

x = int(input("Enter first number: "))
y = int(input("Enter second number: "))
operator = input("Enter operation (+, -, *, /): ")

print("Result:", calc(x, y, operator))
